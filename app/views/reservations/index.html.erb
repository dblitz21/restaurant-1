<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
            <td> Eatery: <%= reservation.eatery_id %> </td>
            <td> Name: <%= reservation.name %> </td>
            <td> Party size: <%= reservation.party_size %> </td>
            <td> Date: <%= reservation.date %> </td>
            <td> Time: <%= reservation.time %> </td>
            <td><%= link_to 'Show', reservation_path(reservation) %></td>
          <% if reservation.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
            <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>




